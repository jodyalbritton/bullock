<%= form_for(@work, :html => { :class => "form-horizontal" }) do |f| %>
  <% if @work.errors.any? %>
    <div class="alert alert-danger alert-dismissable">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <h4><%= pluralize(@work.errors.count, "error") %> prohibited this work from being saved:</h4>

      <ul>
      <% @work.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :title, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :title, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :description, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_area :description, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :price, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :price, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :creation_date, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.date_field :creation_date, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :category, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.collection_select(:category_id, Category.all, :id, :name, {:selected => @work.category}, {:class=>'form-control'}) %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :file, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.file_field :file, :class => "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit :class => "btn btn-primary" %>
    </div>
  </div>
<% end %>
